extends layout

block header

block content

  div.progress
    div#dynamicBar(class="progress-bar active" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%")
      span#current-progress

  p#dataField #{dataField} results

  div.body#dynamicContent
    p write MasterPassword 
      body
        form(action='/shimmerIotaSetup/setMasterPassword', method='POST')
          input(type='password', name='masterPassword', value='', placeholder="Enter masterPassword")
          input(type='submit', value='Submit')
    p Setup DB and Account
      body
        form(action='/shimmerIotaSetup/DBandAccount', method='POST')
          input(type='text', name="dbname", value="", placeholder="Enter dbname")
          input(type='text', name='accountName', value='', placeholder="Enter accountName")
          input(type='password', name='password', value='', placeholder="Enter password")
          input(type='submit', value='Submit')
    p Mint your own Native Token
      body
        form(action='/shimmerIotaSetup/shimmerMintNativeToken', method='POST')
          input(type='text', name="dbname", value="", placeholder="Enter dbname")
          input(type='text', name='accountName', value='', placeholder="Enter accountName")
          input(type='password', name='password', value='', placeholder="Enter password")
          input(type='submit', value='Submit')